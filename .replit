modules = ["nodejs-20", "web", "bash", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-25_05"

[agent]
expertMode = true
integrations = ["javascript_anthropic:1.0.0", "web_scraper:1.0.0"]

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 35633
externalPort = 3002

[[ports]]
localPort = 40389
externalPort = 3003

[[ports]]
localPort = 41187
externalPort = 3000

[[ports]]
localPort = 41549
externalPort = 3001

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "dev-server"

[[workflows.workflow]]
name = "dev-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[deployment]
deploymentTarget = "autoscale"
run = ["npm", "run", "start"]
build = ["npm", "run", "build"]
